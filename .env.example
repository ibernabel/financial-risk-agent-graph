# ============================================================================
# CreditFlow AI - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME="CreditFlow AI"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=true  # Set to false in production

# CORS Settings (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=true

# API Security
API_KEY_HEADER="X-API-KEY"
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY="your-secret-key-here-change-in-production"

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL via Supabase)
# ----------------------------------------------------------------------------
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/creditflow"
# For Supabase: postgresql+asyncpg://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ----------------------------------------------------------------------------
# LLM Provider Configuration
# ----------------------------------------------------------------------------

# Anthropic (Claude 3.5 Sonnet for reasoning)
ANTHROPIC_API_KEY="sk-ant-your-api-key-here"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# OpenAI (GPT-4o for reasoning and vision/OCR)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o"
OPENAI_VISION_MODEL="gpt-4o"

# Google (Gemini 2.0 Flash for reasoning)
GOOGLE_API_KEY="your-google-api-key-here"
GOOGLE_MODEL="gemini-2.0-flash-exp"

# Default LLM Provider (anthropic, openai, google)
DEFAULT_LLM_PROVIDER="anthropic"

# LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# ----------------------------------------------------------------------------
# External Services
# ----------------------------------------------------------------------------

# SerpAPI (Google Search for OSINT)
SERPAPI_KEY="your-serpapi-key-here"

# Credit Report Parser API (Internal Service)
CREDIT_PARSER_API_URL="http://localhost:8001/v1/parse"
CREDIT_PARSER_API_KEY="your-credit-parser-api-key"

# Labor Calculator API (Ministerio de Trabajo)
LABOR_CALCULATOR_URL="https://calculo.mt.gob.do/"

# ----------------------------------------------------------------------------
# Document Storage
# ----------------------------------------------------------------------------
# S3-compatible storage for documents
STORAGE_ENDPOINT="https://storage.example.com"
STORAGE_ACCESS_KEY="your-access-key"
STORAGE_SECRET_KEY="your-secret-key"
STORAGE_BUCKET="creditflow-documents"
STORAGE_REGION="us-east-1"

# ----------------------------------------------------------------------------
# Security & Compliance
# ----------------------------------------------------------------------------
# Data retention (hours)
DATA_RETENTION_HOURS=24

# PII Masking
ENABLE_PII_MASKING=true
MASK_FIELDS="id,phone,email,account_number"

# Encryption (AES-256)
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_OSINT=true
ENABLE_CHECKPOINTING=true
ENABLE_HUMAN_REVIEW=true
FORCE_REANALYSIS=false

# ----------------------------------------------------------------------------
# Monitoring & Observability
# ----------------------------------------------------------------------------
# LangSmith (LangChain observability)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY="your-langsmith-api-key"
LANGCHAIN_PROJECT="creditflow-ai"

# Sentry (Error tracking)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ----------------------------------------------------------------------------
# Testing
# ----------------------------------------------------------------------------
TEST_DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/creditflow_test"
TEST_MODE=false
